<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox fx:controller="com.lms.controller.AddNewBookController" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      alignment="CENTER" prefHeight="600" prefWidth="700" spacing="20" style="-fx-background-color: #f5f5f5;">

    <padding>
        <Insets top="30" right="40" bottom="30" left="40"/>
    </padding>

    <Label text="Add New Book" style="-fx-text-fill: #2196f3;">
        <font>
            <Font name="System Bold" size="24.0"/>
        </font>
        <VBox.margin>
            <Insets bottom="20"/>
        </VBox.margin>
    </Label>

    <VBox spacing="15" maxWidth="400">
        <TextField fx:id="titleField" promptText="Book Title" 
                  style="-fx-pref-height: 40; -fx-font-size: 14px; -fx-background-radius: 5;"/>
        <TextField fx:id="authorField" promptText="Author"
                  style="-fx-pref-height: 40; -fx-font-size: 14px; -fx-background-radius: 5;"/>
        <TextField fx:id="categoryField" promptText="Category"
                  style="-fx-pref-height: 40; -fx-font-size: 14px; -fx-background-radius: 5;"/>
    </VBox>

    <HBox spacing="20" alignment="CENTER">
        <Button  text="Submit" onAction="#submitButtonClick"
                style="-fx-min-width: 100; -fx-min-height: 40; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;"/>
        <Button  text="Cancel" onAction="#cancleButtonClick"
                style="-fx-min-width: 100; -fx-min-height: 40; -fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;"/>
    </HBox>
</VBox>
