<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.GridPane?>

<HBox fx:controller="com.lms.controller.LibraryHomeController" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" 
      prefHeight="600" prefWidth="1000" style="-fx-background-color: #f5f5f5;">
    
    <!-- Left Side Panel -->
    <VBox alignment="TOP_LEFT" spacing="20" style="-fx-background-color: #ffffff; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);" 
          prefWidth="500">
        <padding>
            <Insets top="30" right="20" bottom="30" left="40"/>
        </padding>
        
        <ImageView fitHeight="150" fitWidth="150" pickOnBounds="true" preserveRatio="true">
            <Image url="@/images/library.png"/>
        </ImageView>
        
        <Label text="Library Management System" >
            <font>
                <Font name="System Bold" size="30"/>
            </font>
        </Label>
        
        <VBox spacing="15" style="-fx-padding: 20 0 0 0;">
            <Label text="Key Features:" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2196f3;"/>
            <VBox spacing="8" style="-fx-padding: 0 0 0 10;">
                <Label text="• Efficient Book Management" style="-fx-font-size: 14;"/>
                <Label text="• Member Registration System" style="-fx-font-size: 14;"/>
                <Label text="• Book Issue and Return Tracking" style="-fx-font-size: 14;"/>
                <Label text="• Search and Filter Options" style="-fx-font-size: 14;"/>
                <Label text="• Member History Management" style="-fx-font-size: 14;"/>
                <Label text="• Book Availability Status" style="-fx-font-size: 14;"/>
            </VBox>
        </VBox>
    </VBox>

    <!-- RightSide panel  -->
    <VBox alignment="CENTER" spacing="40" HBox.hgrow="ALWAYS">
        <padding>
            <Insets top="30" right="40" bottom="30" left="40"/>
        </padding>

        <!-- BookServices panel -->
        <VBox spacing="15" alignment="CENTER">
            <Label text="Book Services" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2196f3;"/>
            <VBox spacing="10" alignment="CENTER">
                <Button text="Add Book" styleClass="action-button" onAction="#addBookButtonClick"
                        style="-fx-min-width: 200; -fx-min-height: 40;"/>
                <Button text="View Books" styleClass="action-button" onAction="#viewAllBooksClick"
                        style="-fx-min-width: 200; -fx-min-height: 40;"/>
            </VBox>
        </VBox>

        <!-- Customer Services -->
        <VBox spacing="15" alignment="CENTER">
            <Label text="Customer Services" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2196f3;"/>
            <VBox spacing="10" alignment="CENTER">
                <Button text="Add Member" onAction="#addMemberButtonClick" styleClass="action-button"
                        style="-fx-min-width: 200; -fx-min-height: 40;"/>
                <Button text="View Members" styleClass="action-button"
                        style="-fx-min-width: 200; -fx-min-height: 40;"/>
                <Button text="Member's Books" styleClass="action-button"
                        style="-fx-min-width: 200; -fx-min-height: 40;"/>
            </VBox>
        </VBox>

        <!-- Issue Records -->
        <VBox spacing="15" alignment="CENTER">
            <Label text="Issue Record Services" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2196f3;"/>
            <VBox spacing="10" alignment="CENTER">
                <Button text="Issue Book" styleClass="action-button"
                        style="-fx-min-width: 200; -fx-min-height: 40;"/>
                <Button text="Return Book" styleClass="action-button"
                        style="-fx-min-width: 200; -fx-min-height: 40;"/>
                <Button text="Issued Records" styleClass="action-button"
                        style="-fx-min-width: 200; -fx-min-height: 40;"/>
                <Button text="Book's Members" styleClass="action-button"
                        style="-fx-min-width: 200; -fx-min-height: 40;"/>
            </VBox>
        </VBox>
    </VBox>
</HBox>
